#!/bin/bash
# Pre-commit hook to check for debugging tools in PHP files
# Exits with 1 if debug tools are found, 0 otherwise

# Color codes for output
RED='\033[0;31m'
YELLOW='\033[1;33m'
GREEN='\033[0;32m'
NC='\033[0m' # No Color

# Debug tools patterns to check
PATTERNS=(
    '\bray\('
    '\bdump\('
    '\bdd\('
    '\bvar_dump\('
    '\bprint_r\('
    '\bvar_export\('
    '\bdebug_backtrace\('
    '\bxdebug_'
    '\berror_log\('
)

# Files to exclude
EXCLUDE_PATTERN='_ide_helper\.php|vendor/|node_modules/'

found_issues=0

# Get list of staged PHP files
staged_files=$(git diff --cached --name-only --diff-filter=ACM | grep '\.php$')

if [ -z "$staged_files" ]; then
    exit 0
fi

for file in $staged_files; do
    # Skip excluded files
    if echo "$file" | grep -qE "$EXCLUDE_PATTERN"; then
        continue
    fi

    # Check if file exists
    if [[ ! -f "$file" ]]; then
        continue
    fi

    # Check each pattern
    for pattern in "${PATTERNS[@]}"; do
        matches=$(grep -nE "$pattern" "$file" 2>/dev/null)
        if [ -n "$matches" ]; then
            if [ $found_issues -eq 0 ]; then
                echo -e "${RED}❌ Debug tools found in staged files!${NC}"
                echo ""
            fi
            echo -e "${YELLOW}Found in $file:${NC}"
            echo "$matches" | head -5
            echo ""
            found_issues=1
        fi
    done
done

if [ $found_issues -eq 1 ]; then
    echo -e "${RED}Please remove all debug tools before committing.${NC}"
    echo "Common debug tools to remove:"
    echo "  - ray()"
    echo "  - dump(), dd()"
    echo "  - var_dump(), print_r()"
    echo "  - error_log()"
    echo ""
    exit 1
fi

echo -e "${GREEN}✓ No debug tools found${NC}"
exit 0